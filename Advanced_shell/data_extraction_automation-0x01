#!/bin/bash

# Extract fields using jq.exe explicitly
name=$(./jq.exe -r '.name' data.json)
height=$(./jq.exe -r '.height' data.json)
weight=$(./jq.exe -r '.weight' data.json)
type=$(./jq.exe -r '.types[0].type.name' data.json)

# Check all variables are set
if [[ -z "$name" || -z "$height" || -z "$weight" || -z "$type" ]]; then
  echo "Error: Could not extract all required data."
  exit 1
fi

# Convert height and weight using awk
height_m=$(awk "BEGIN {printf \"%.1f\", $height / 10}")
weight_kg=$(awk "BEGIN {printf \"%d\", $weight / 10}")

# Prepare raw output string (all lowercase)
output="$name is of type $type, weighs ${weight_kg}kg, and is ${height_m}m tall."

# Use sed to capitalize the first letter of the name and type in the output
formatted_output=$(echo "$output" | sed -E 's/^([a-z])/\U\1/; s/(of type )([a-z])/\1\u\2/')

echo "$formatted_output"
#!/bin/bash

# Extract fields from data.json using jq
name=$(jq -r '.name' data.json)
height=$(jq -r '.height' data.json)
weight=$(jq -r '.weight' data.json)
type=$(jq -r '.types[0].type.name' data.json)

# Convert height from decimeters to meters, weight from hectograms to kg using awk
height_m=$(awk "BEGIN {printf \"%.1f\", $height / 10}")
weight_kg=$(awk "BEGIN {printf \"%d\", $weight / 10}")

# Format output (all lowercase first)
output="$name is of type $type, weighs ${weight_kg}kg, and is ${height_m}m tall."

# Capitalize first letter of the whole string using sed
echo "$output" | sed 's/./\u&/'